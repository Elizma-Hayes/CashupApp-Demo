<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashupDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TableLayout
        android:id="@+id/vwFinal"
        android:layout_width="373dp"
        android:layout_height="275dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        <TableRow
            android:id="@+id/rwTotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/rwfnlTotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rwlblfnlTotalLable"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Totals:"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rwlblfnlDm25"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rwlblfnlDm26"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="            "
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/rwlblfnlTotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rwlblfnlDm20"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />
            </TableRow>
        </TableRow>

        <TableRow
            android:id="@+id/rwFloat"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/rwfnlFloat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rwlblfnlFloatLabel"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="   Float:"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rwlblDm026"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:textAlignment="viewEnd"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/rwlblfnlFloat"
                    android:layout_width="133dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rwlblDm020"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />
            </TableRow>
        </TableRow>

        <TableRow
            android:id="@+id/rwTips"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/rwfnlTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rwlblfnlTipsLable"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="   Tips:"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rwlblDm0026"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:textAlignment="viewEnd"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/rwlblfnlTips"
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rwlblDm0020"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />
            </TableRow>
        </TableRow>

        <TableRow
            android:id="@+id/rwTill"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/rwfnlTill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rwlblfnlTillLable"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="   Till:"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rwlblDm00026"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:textAlignment="viewEnd"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/rwlblfnlTill"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rwlblDm00020"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

            </TableRow>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>